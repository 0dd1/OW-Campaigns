// prvni utok rusu na epsilon
on Contact(s1,s2) DO
begin
  if s1=Amici and s2=You then
    begin
      while kecy do wait(0$1);
      kecy=true;
      DialogueOn;
      Say(Joan,'DJoan-Joan-1');
      Say(bur,'DJoan-Bur-1');
      Say(Joan,'DJoan-Joan-2');
      Say(bur,'DJoan-Bur-2');
      SayRadio(JMM,'DJoan-JMM-2');
      Say(bur,'DJoan-Bur-3');
      SayRadio(JMM,'DJoan-JMM-3');
      DialogueOff;
      if maccepted<>1 then enable(1)
                      else if mhandedover=1 then enable(2)
                                            else enable(3);
      enable(4);
      kecy=false;
      Am_utoky=1;
      disable;
    end
    else enable;
end;

