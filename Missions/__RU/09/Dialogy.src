EXPORT function vyber_misto_pro_zakladnu;
VAR pom;
begin
  pom=Query('QStarting');
  case pom of
   1:Ru_base=base1;
   2:Ru_base=base2;
   3:Ru_base=base3;
  end;
  result=pom;
end;

