// funkce na zadani hodnot pro ruzne nahodne zakladny
function SetXYS(um,b);
begin
  if um=2 then um=1;
  case b of
   1:case um of            // depot
      1:XYS=[137,65,2];
      4:XYS=[97,112,0];
      3:XYS=[48,73,3];
     end;
   2:case um of            // oil mine
      1:XYS=[150,80,3];
      4:XYS=[91,109,3];
      3:XYS=[43,71,2];
     end;
   3:case um of            // sib elelkr
      1:XYS=[140,63,3];
      4:XYS=[105,112,4];
      3:XYS=[37,70,2];
     end;             
   4:case um of            // faktory
      1:XYS=[160,90,5];
      4:XYS=[99,94,3];
      3:XYS=[44,79,1];
     end;
   5:case um of            // turret 1
      1:XYS=[133,72,4];
      4:XYS=[86,84,2];
      3:XYS=[75,90,2];
     end;
   6:case um of            // laboratory
      1:XYS=[152,71,4];
      4:XYS=[103,106,5];
      3:XYS=[50,90,3];
     end;
   7:case um of            // bunkr
      1:XYS=[143,56,2];
      4:XYS=[105,93,2];
      3:XYS=[59,67,2];
     end;
   8:case um of            // gun extension
      1:XYS=[160,93,0];
      4:XYS=[102,94,4];
      3:XYS=[41,76,2];
     end;
   9:case um of            // turet 2
      1:XYS=[140,74,3];
      4:XYS=[93,85,2];
      3:XYS=[60,93,2];
     end;
   10:case um of            // turret 3
       1:XYS=[157,98,5];
       4:XYS=[85,96,2];
       3:XYS=[63,87,2];
      end;
   11:case um of            // armoury
       1:XYS=[144,61,2];
       4:XYS=[102,113,0];
       3:XYS=[55,88,0];
      end;
   12:case um of            // track ext
