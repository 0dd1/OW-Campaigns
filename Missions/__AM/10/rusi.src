// pridani konzerv,ropy,sioberitu do base
EXPORT function cheat_source(dep,cans,oil,siberite);
begin
  Dbase=GetBase(dep);
  AddResourceType(Dbase,mat_cans,cans);
  AddResourceType(Dbase,mat_oil,oil);
  AddResourceType(Dbase,mat_siberit,siberite);
end;


